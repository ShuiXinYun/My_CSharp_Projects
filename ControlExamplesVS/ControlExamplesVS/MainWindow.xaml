<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ControlExamplesVS" x:Class="ControlExamplesVS.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <local:ProgressCircle HorizontalAlignment="Left" Margin="88,57,0,0"  Value="15" VerticalAlignment="Top" Height="100" Width="100" BackgroundBrush="Black" IndicatorBrush="DodgerBlue">
            <local:ProgressCircle.ProgressBorderBrush>
                <RadialGradientBrush>
                    <GradientStop Color="#FF9B9B9B"/>
                    <GradientStop Color="Black" Offset="0.889"/>
                    <GradientStop Color="#FFD1D1D1" Offset="1"/>
                </RadialGradientBrush>
            </local:ProgressCircle.ProgressBorderBrush>
        </local:ProgressCircle>
    </Grid>
</Window>
